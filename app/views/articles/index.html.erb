<h1>Listing articles</h1>

<table>
  <tr>
    <th>Url</th>
    <th>Stripped url</th>
    <th>Parameters</th>
    <th>Site_id</th>
    <th>To email</th>
    <th>Times sent</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.url %></td>
    <td><%= article.stripped_url %></td>
    <td><%= article.parameters %></td>
    <td><%= article.site_id %></td>
    <td><%= article.to_email %></td>
    <td><%= article.times_sent %></td>
    <td><%= link_to 'Show', article %></td>
    <td><%= link_to 'Edit', edit_article_path(article) %></td>
    <td><%= link_to 'Destroy', article, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

