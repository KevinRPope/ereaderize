<div id="centerDoc">
<h1>Editing password information for <%=h @user.username -%></h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>
<div class="post">
<fieldset><legend>Update Your Password</legend>
<table>
  <tr>
	<td><%= f.label :password %></td>
    <td><%= f.password_field :password %></td>
  </tr>
  <tr>
	<td><%= f.label :password_confirmation%></td>
	<td><%= f.password_field :password_confirmation%></td>
  </tr>
  <tr>
    <td><%= f.submit 'Update' %></td>
  </tr>
</table>
</fieldset>
</div>
<% end %>
</div>